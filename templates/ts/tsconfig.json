{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "src",
    "strict": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "declaration": true,
    "emitDecoratorMetadata": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "typings/**/*",
    "src/**/*"
  ]
}
